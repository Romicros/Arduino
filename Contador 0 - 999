//DESCRIPCION:  El siguinte codigo es un contador de de 0 a 999 visualizados en dos display.

int A = 13;
int B = 12;
int C = 11;
int D = 10;
int cont_obj=0;
int cont_obj2=0;
int contador = 0;
int pulsador = 6;
int unidades = 9;
int decenas = 8;
int centenas= 7;
int cont_decena=0;
int cont_unidad=0;
int cont_centenas=0;


void setup() {
// Declaracion de Pines de salidas
  pinMode (A, OUTPUT);
  pinMode (B, OUTPUT);
  pinMode (C, OUTPUT);
  pinMode (D, OUTPUT);
  pinMode (unidades, OUTPUT);
  pinMode (decenas, OUTPUT);
  pinMode (centenas, OUTPUT);
  pinMode (pulsador, INPUT);
}

void loop() {
// Realiza la comparacion para hacer el conteo
  if (contador < 999) {   
    // Hace el incremento de 1 en 1                     
    contador++;       
    //Descompe las decenas                          
      cont_centenas= contador/100;   
      // encienden los display segun el contador vaya haciendo el incremento          
      digitalWrite(unidades,LOW);             
      digitalWrite(decenas, LOW);
      digitalWrite(centenas, HIGH);
      //se invoca el metodo para encender el display de las centenas
      dis(cont_centenas);                       
      delay(500);      
    //Se descompone las decenas con la formula
      cont_decena=((contador - (cont_centenas * 100))/10); 
      // encienden los display segun el contador vaya haciendo el incremento   
      digitalWrite(unidades,LOW);              
      digitalWrite(decenas,HIGH);
      digitalWrite(centenas,LOW);
      // Se invoca el metodo para encender el display de las centenas
      dis(cont_decena);                       
      delay(300);       
      // Se descomponen las unidades                 
      // Formulas      
      cont_obj = ((contador - (cont_centenas * 100))/10);  
      cont_unidad=((contador - (cont_centenas * 100))-cont_obj*10);
       // encienden los display segun el contador vaya haciendo el incremento   
      digitalWrite(unidades,HIGH);            
      digitalWrite(decenas,LOW);
      digitalWrite(centenas,LOW);
      // Se invocan las unidades 
      dis(cont_unidad);                      
      delay(200);                           
    }
    else
  {
    contador = 0;                            // CONDICIÃ“N ELSE PARA CUANDO EL CONTADOR SUPERE EL 999 Y SE REINICIE ///
  }
}
// Metodo para activar los displays
void dis (int numero) {                      
  switch (numero) {
    //Display se enciende en 0
    case 0:                                  
      digitalWrite(A, LOW);
      digitalWrite(B, LOW);
      digitalWrite(C, LOW);
      digitalWrite(D, LOW);
      break;
      //Display se enciende en 1
    case 1:
      digitalWrite(A, HIGH);
      digitalWrite(B, LOW);
      digitalWrite(C, LOW);
      digitalWrite(D, LOW);
      break;
      //Display se enciende en 2
    case 2:
      digitalWrite(A, LOW);
      digitalWrite(B, HIGH);
      digitalWrite(C, LOW);
      digitalWrite(D, LOW);
      break;
      //Display se enciende en 3
    case 3:
      digitalWrite(A, HIGH);
      digitalWrite(B, HIGH);
      digitalWrite(C, LOW);
      digitalWrite(D, LOW);
      break;
      //Display se enciende en 4
    case 4:
      digitalWrite(A, LOW);
      digitalWrite(B, LOW);
      digitalWrite(C, HIGH);
      digitalWrite(D, LOW);
      break;
      //Display se enciende en 5
    case 5:

      digitalWrite(A, HIGH);
      digitalWrite(B, LOW);
      digitalWrite(C, HIGH);
      digitalWrite(D, LOW);
      break;
      //Display se enciende en 6

    case 6:
      digitalWrite(A, LOW);
      digitalWrite(B, HIGH);
      digitalWrite(C, HIGH);
      digitalWrite(D, LOW);
      break;
      //Display se enciende en 7
    case 7:
      digitalWrite(A, HIGH);
      digitalWrite(B, HIGH);
      digitalWrite(C, HIGH);
      digitalWrite(D, LOW);
      break;
     //Display se enciende en 8
    case 8:
      digitalWrite(A, LOW);
      digitalWrite(B, LOW);
      digitalWrite(C, LOW);
      digitalWrite(D, HIGH);
      break;
     //Display se enciende en 9
    case 9:
      digitalWrite(A, HIGH);
      digitalWrite(B, LOW);
      digitalWrite(C, LOW);
      digitalWrite(D, HIGH);
      break;

  }
}



